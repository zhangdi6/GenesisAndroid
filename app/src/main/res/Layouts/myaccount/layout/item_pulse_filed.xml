<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/dp_124" android:background="@drawable/bg_item_pulse">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image_head"
        android:layout_width="@dimen/dp_58"
        android:layout_height="@dimen/dp_58"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_12"
        android:src="@drawable/head_home"/>


    <RelativeLayout
        android:id="@+id/relayout_content"
        android:layout_toRightOf="@id/image_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_22"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#ff333333"
            android:id="@+id/text_name"
            android:text="name"
            />

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@drawable/icon_gongsi"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_below="@id/text_name"
            android:id="@+id/image_gongsi"/>


        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_11"
            android:src="@drawable/icon_zhiwei"
            android:layout_below="@id/image_gongsi"
            android:id="@+id/image_zhiwei"
            />
        
        <ImageView
            android:id="@+id/icon_jiantou"
            android:layout_width="7dp"
            android:layout_height="@dimen/dp_13"
            android:src="@drawable/icon_lujing_jiantou"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_5"/>


        <TextView
            android:id="@+id/text_commpany_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignTop="@id/image_gongsi"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="-3dp"
            android:layout_toRightOf="@id/image_gongsi"
            android:text="北京舒适科技"
            android:textColor="#ff666666"
            android:textSize="14sp"
            android:layout_toLeftOf="@+id/text_complete"
            android:layout_marginRight="@dimen/dp_6"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/text_zhiwei_name"
            android:layout_alignTop="@id/image_zhiwei"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="程序工程师"
            android:textColor="#ff666666"
            android:textSize="14sp"
            android:layout_toRightOf="@id/image_zhiwei"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="-3.2dp"
            android:gravity="left|center_vertical"
            android:layout_alignRight="@id/text_commpany_name"
            android:maxLines="1"
            android:ellipsize="end"
            />


        <TextView
            android:id="@+id/text_complete"
            android:textColor="#ffbebebe"
            android:textSize="10sp"
            android:text="@string/resumeIsComplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/icon_jiantou"
            android:layout_marginTop="@dimen/dp_16"/>

        <LinearLayout
            android:id="@+id/linear_count"
            android:layout_width="45dp"
            android:layout_height="17dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/text_complete"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@drawable/bg_pulse_complete"
            android:gravity="center"
            android:padding="@dimen/dp_3" android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_complete"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:src="@drawable/icon_comlete"
                />

            <TextView
                android:id="@+id/text_complete_count"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginLeft="@dimen/dp_3"
                android:text="0"
                android:textColor="#ffffffff"
                android:textSize="10sp"
                android:gravity="center"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>