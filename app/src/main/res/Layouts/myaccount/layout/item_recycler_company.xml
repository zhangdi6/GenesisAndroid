<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="76dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imCompanyHeadItem"
            android:layout_width="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="6.5dp"
            android:layout_marginLeft="6.5dp"
            android:src="@drawable/head_home"
            android:layout_gravity="center"
            android:layout_height="50dp"
            app:riv_border_color="@color/_c7ced8"
            app:riv_border_width="1dp"
            app:riv_corner_radius_top_left="5dp"
            app:riv_corner_radius_bottom_right="5dp"
            app:riv_corner_radius_bottom_left="5dp"
            app:riv_corner_radius_top_right="5dp"
            app:riv_mutate_background="true"
            app:riv_oval="false"
            app:riv_tile_mode="repeat"/>

        <TextView
            android:id="@+id/tvCompanyNameItem"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="6.5dp"
            android:layout_marginLeft="6.5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:maxEms="6"
            android:ellipsize="end"
            android:layout_marginBottom="3dp"
            android:textColor="@color/_999999"
            android:textSize="9sp"/>
        <TextView
            android:id="@+id/tvCompanyNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="6.5dp"
            android:layout_marginLeft="6.5dp"
            android:drawableLeft="@drawable/people_number"
            android:singleLine="true"
            android:drawablePadding="3dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/_999999"
            android:textSize="9sp"/>
    </LinearLayout>

</LinearLayout>