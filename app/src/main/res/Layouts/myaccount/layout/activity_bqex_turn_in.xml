<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="@color/image_overlay_false">
    <include layout="@layout/title_lay" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_22"
        android:paddingRight="@dimen/dp_22"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <View
                android:layout_width="3dp"
                android:layout_height="14dp"
                android:background="@color/_26c68a" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_weight="1"
                android:text="输入币全账号（手机号）"
                android:textColor="@color/_333333"
                android:textSize="14sp" />


        </LinearLayout>

        <EditText
            android:id="@+id/edit_account_action"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/_666666"
            android:background="@drawable/bg_edit_bqex"
            android:inputType="number"
            android:maxLength="11"
            android:text=""
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_22"
        android:paddingRight="@dimen/dp_22"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12"
        android:id="@+id/linear_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <View
                android:layout_width="3dp"
                android:layout_height="14dp"
                android:background="@color/_26c68a" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_weight="1"
                android:text="选择存入PBS数量"
                android:textColor="@color/_333333"
                android:textSize="14sp" />


        </LinearLayout>

        <EditText
            android:id="@+id/edit_count_pbs"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/_666666"
            android:background="@drawable/bg_edit_bqex"
            android:inputType="number"
            android:maxLength="11"
            android:text=""
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            />

        
        
        <Button
            android:id="@+id/btn_action"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:background="@drawable/bg_bt_bqex"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:text="确认"/>
    </LinearLayout>
</LinearLayout>