<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingRight="@dimen/dp_30" android:paddingLeft="@dimen/dp_30"
    android:paddingTop="@dimen/dp_15" android:paddingBottom="@dimen/dp_15" android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_position_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6K-7K"
            android:textColor="@color/_55D8B1"
            android:textSize="13sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/text_position_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产品推广经理"
            android:textColor="#ff333333"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/text_position_price"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/dp_10"
            android:maxLines="2"
            android:ellipsize="end"
            />


    </RelativeLayout>
    <TextView
        android:id="@+id/text_position_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="齐齐哈尔市金恒科技有限公司"
        android:textColor="#ff333333"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/dp_3"
        android:maxLines="2"
        android:ellipsize="end"
        />
    <LinearLayout
        android:layout_width="match_parent" android:layout_marginTop="@dimen/dp_10"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
            android:id="@+id/text_tag_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tag_bg"
            android:text="三亚"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/_999999"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_2"
            android:paddingTop="@dimen/dp_2"
            />

        <TextView
            android:id="@+id/text_tag_quanzhi"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tag_bg"
            android:text="全职"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/_999999"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_2"
            android:paddingTop="@dimen/dp_2"
            />
    </LinearLayout>
</LinearLayout>