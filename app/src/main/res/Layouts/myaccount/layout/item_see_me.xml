<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_150"
    android:layout_marginTop="@dimen/dp_6"
    android:background="#ffffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_self_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="是一种优秀的品质，是心智成熟的标志。它是每一成功人力量都具有的一种品质，每个人要精神成功就必须具备…稳…"
            android:textColor="#888888"
            android:textSize="@dimen/sp_13" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:alpha="0.8"
            android:background="@color/image_overlay_false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="查看了您的主页"
            android:textColor="@color/_bebebe"
            android:textSize="@dimen/sp_9" />

    </LinearLayout>


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image_head"
        android:layout_width="@dimen/dp_58"
        android:layout_height="@dimen/dp_58"
        android:layout_above="@id/view_bottom"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:src="@drawable/head_home" />


    <RelativeLayout
        android:id="@+id/relayout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image_head"
        android:layout_alignBottom="@id/image_head"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_toRightOf="@id/image_head">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="#ff333333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/text_commpany_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/text_name"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_6"
            android:layout_toLeftOf="@+id/text_complete"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="北京舒适科技"
            android:textColor="#ff666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_zhiwei_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignTop="@id/text_commpany_name"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@id/text_commpany_name"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:text="程序工程师"
            android:textColor="#ff666666"
            android:textSize="14sp" />


    </RelativeLayout>


</RelativeLayout>