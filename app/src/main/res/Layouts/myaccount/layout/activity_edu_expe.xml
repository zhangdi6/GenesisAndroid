<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_f1f1f1"
    android:orientation="vertical">

    <include layout="@layout/title_lay" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/scrollLl"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/school"
                    android:id="@+id/schoolLeft"
                    android:textColor="#262a30"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/scrollTv"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="11dp"
                    android:drawableRight="@drawable/go"
                    android:gravity="right"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:hint="@string/str_input"
                    android:textColorHint="#b6b6b6"
                    android:textColor="#b6b6b6"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <include layout="@layout/line2" />

            <LinearLayout
                android:id="@+id/educationLl"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/educationLeft"
                    android:text="@string/education"
                    android:textColor="#262a30"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/educationTv"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="11dp"
                    android:drawableRight="@drawable/go"
                    android:gravity="right"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:hint="@string/pleaseFillIn"
                    android:textColor="#b6b6b6"
                    android:textSize="11dp" />
            </LinearLayout>

            <include layout="@layout/line2" android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/majorLl"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/major"
                    android:id="@+id/majorLeft"
                    android:textColor="#262a30"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/majorTv"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="11dp"
                    android:drawableRight="@drawable/go"
                    android:gravity="right"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:hint="@string/str_input"
                    android:textColorHint="#b6b6b6"
                    android:textColor="#b6b6b6"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <include layout="@layout/line2"></include>

            <LinearLayout
                android:id="@+id/durationLl"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/duration"
                    android:id="@+id/durationLeft"
                    android:textColor="#262a30"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/durationTv"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="11dp"
                    android:gravity="right"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:drawableRight="@drawable/go"
                    android:hint="@string/str_start_edu_time"
                    android:textColorHint="#b6b6b6"
                    android:textColor="#b6b6b6"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <include layout="@layout/line2" android:visibility="gone"></include>

            <!--在校经历-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/llExperience"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="11dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/tvExperienceLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/schoolExperience"
                    android:textColor="#262a30"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvExperience"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="11dp"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="@string/pleaseFillIn"
                    android:ellipsize="end"
                    android:drawableRight="@drawable/go"
                    android:textColor="#b6b6b6"
                    android:textSize="11sp" />
                <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:src="@drawable/go"-->
                    <!--android:layout_height="wrap_content" />-->
            </LinearLayout>

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginLeft="@dimen/spacing28dp"
                android:layout_marginRight="@dimen/spacing28dp"
                android:layout_marginTop="@dimen/dp_24"
                android:background="@null"
                android:gravity="center"
                android:text="@string/delete_exp"
                android:textColor="@color/_999999"
                android:textSize="@dimen/sp_16"
                android:visibility="gone"/>




            <TextView
                android:id="@+id/tv_save"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginLeft="@dimen/spacing28dp"
                android:layout_marginRight="@dimen/spacing28dp"
                android:layout_marginTop="@dimen/dp_33"
                android:background="@drawable/bt_psw_details_shape2"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                android:visibility="gone"/>



