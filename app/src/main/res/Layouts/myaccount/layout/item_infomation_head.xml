<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" android:layout_marginBottom="@dimen/dp_10">

    <ImageView
        android:id="@+id/image_zixun_head"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_70"
        android:src="@drawable/icon_zixun_default" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image_zixun_head"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/image_zixun_head"
        android:textColor="#ff333333"
        android:textSize="13sp"
        android:id="@+id/text_title" android:maxLines="2" android:ellipsize="end"
        android:layout_marginTop="@dimen/dp_8"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_zixun_head"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/image_zixun_head"
        android:textColor="#ff999999"
        android:textSize="11sp"
        android:id="@+id/text_time"
        android:layout_marginBottom="@dimen/dp_8"/>
</RelativeLayout>