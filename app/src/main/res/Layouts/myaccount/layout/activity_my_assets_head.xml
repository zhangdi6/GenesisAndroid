<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_lay"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/u0"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/pestTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/assets0"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/pvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:text="0.01"
                android:textColor="@color/white"
                android:textSize="25dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/exchange"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/assets6"/>
    </RelativeLayout>




    <TextView
        android:id="@+id/freeze"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/u1"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="@string/assets1"
        android:textColor="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f1f1f1"></View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="@string/assets2" />

    <include layout="@layout/line2"></include>

    <TextView
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="PETS是全球宠物通用积分" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f1f1f1"></View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="@string/assets4" />


    <include layout="@layout/line2"></include>
</LinearLayout>