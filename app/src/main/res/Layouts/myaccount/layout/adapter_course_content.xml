<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_course_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="KING"
            android:textColor="@color/_333333"
            android:textSize="16sp" />

        <!--密码-->
        <com.iruiyou.pet.utils.ZQImageViewRoundOval
            android:id="@+id/im_headIv_course"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:layout_marginTop="11dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/llPhone">

            <TextView
                android:id="@+id/tv_course_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="130dp"
                android:text="KING"
                android:textColor="@color/_666666"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/linear_zhekou"
                    android:visibility="visible"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_6"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_zhekou"
                        android:layout_width="30dp"
                        android:layout_height="@dimen/dp_13"
                        android:background="@drawable/bg_red"
                        android:gravity="center"
                        android:text="8折"
                        android:textColor="#ffff6161"
                        android:textSize="@dimen/sp_8" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <TextView
                            android:id="@+id/text_before_zhekou"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="99"
                            android:textColor="@color/_dedede"
                            android:textSize="12sp"
                            />

                        <View
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="1dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/line" />
                    </RelativeLayout>


                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/course_crystal"
                    android:layout_marginRight="@dimen/dp_3"/>

                <TextView
                    android:id="@+id/tv_course_crystal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/_ff6161"
                    android:textSize="19sp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

        </RelativeLayout>

        <!--我的详细资料-->
        <LinearLayout
            android:id="@+id/ll_my"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="11dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_course_head"
                android:layout_width="29dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="11dp"
                android:layout_height="29dp"
                android:src="@drawable/head_home"
                android:layout_gravity="center|left"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="11dp"
                android:layout_gravity="center"
                android:layout_marginLeft="11dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_course_name"
                    android:layout_width="wrap_content"
                    android:text="KING"
                    android:textSize="10sp"
                    android:textColor="@color/_999999"
                    android:maxLines="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_course_information"
                    android:layout_width="wrap_content"
                    android:textSize="9sp"
                    android:text="KING"
                    android:textColor="@color/_999999"
                    android:maxLines="1"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/line5"></include>
</LinearLayout>