<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_f1f1f1"
    android:orientation="vertical">

    <include layout="@layout/title_lay"></include>
    <!--编辑头像-->
    <LinearLayout
        android:id="@+id/llEditHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imEditHead"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/head_home"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_border_color="@color/white"
            app:riv_border_width="3dp"
            app:riv_corner_radius="10dp"
            app:riv_mutate_background="true"
            app:riv_oval="true"
            app:riv_tile_mode="repeat" />
        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:text="@string/editor_head"-->
        <!--android:textSize="10sp"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:textColor="@color/_333333"-->
        <!--android:layout_height="wrap_content" />-->

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/information"
        android:textColor="@color/_999999"
        android:textSize="10sp" />
    <!--姓名-->
    <LinearLayout
        android:id="@+id/userNameLl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="6dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/userNameLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/username"
            android:textColor="#262a30"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/userNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="11dp"
            android:drawableRight="@drawable/go"
            android:hint="@string/pleaseFillIn"
            android:textColor="#b6b6b6"
            android:textSize="11sp"
            android:gravity="right"/>
    </LinearLayout>

    <include layout="@layout/line2" />
    <!--职业身份-->
    <LinearLayout
        android:id="@+id/linear_gender"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="性别"
            android:textColor="#262a30"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/genderTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="11dp"
            android:drawableRight="@drawable/go"
            android:hint="@string/pleaseFillIn"
            android:textColor="#b6b6b6"
            android:textSize="11sp"
            android:gravity="right"/>
    </LinearLayout>


    <include layout="@layout/line2" />
    <!--职业身份-->
    <LinearLayout
        android:id="@+id/linear_city"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="城市"
            android:textColor="#262a30"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/cityTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="11dp"
            android:drawableRight="@drawable/go"
            android:hint="@string/pleaseFillIn"
            android:textColor="#b6b6b6"
            android:textSize="11sp"
            android:gravity="right"/>
    </LinearLayout>

    <!--学历-->
    <LinearLayout
        android:id="@+id/educationLl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/educationLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/education"
            android:textColor="#262a30"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/educationTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="11dp"
            android:drawableRight="@drawable/go"
            android:hint="@string/pleaseFillIn"
            android:textColor="#b6b6b6"
            android:textSize="11sp" />
    </LinearLayout>

    <!--<include layout="@layout/line2"></include>-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="职业信息"
        android:textColor="@color/_999999"
        android:textSize="10sp" />

    <!--职业身份-->
    <LinearLayout
        android:layout_marginTop="@dimen/dp_6"
        android:id="@+id/positionLl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/positionLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="身份"
            android:textColor="#262a30"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/positionTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="11dp"
            android:drawableRight="@drawable/go"
            android:hint="@string/pleaseFillIn"
            android:textColor="#b6b6b6"
            android:textSize="11sp"
            android:gravity="right"/>
    </LinearLayout>
    <include layout="@layout/line2" />
    <!--职业头衔-->
    <LinearLayout
        android:id="@+id/positionTitle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="头衔"
            android:textColor="#262a30"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/positionTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="11dp"
            android:drawableRight="@drawable/go"
            android:hint="@string/pleaseFillIn"
            android:textColor="#b6b6b6"
            android:textSize="11sp"
            android:gravity="right"/>
    </LinearLayout>

    <include layout="@layout/line2" />

    <!--个人描述-->
    <LinearLayout
        android:id="@+id/llDescribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >


        <LinearLayout
            android:layout_width="match_parent" android:gravity="center"
            android:layout_height="45dp" android:orientation="horizontal">
            <TextView
                android:id="@+id/tvDescribeLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="简介"
                android:textColor="#262a30"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvDescribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="11dp"
                android:visibility="visible"
                android:drawableRight="@drawable/go"
                android:textColor="#b6b6b6"
                android:textSize="11sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxWidth="@dimen/dp_300"
                android:hint="@string/pleaseFillIn"
                android:gravity="right"/>

        </LinearLayout>

        <EditText
            android:id="@+id/edit_desic"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/white"
            android:gravity="top|left"
            android:hint="@string/PleaseFillInYourPersonalDescription"
            android:padding="10dp"
            android:textSize="14dp"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            />

    </LinearLayout>

    <include layout="@layout/line2" android:visibility="gone"/>
    <!--所在公司-->
    <LinearLayout
        android:id="@+id/companyLl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/companyLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/companyName"
            android:textColor="#262a30"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/companyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="11dp"
            android:drawableRight="@drawable/go"
            android:hint="@string/pleaseFillIn"
            android:textColor="#b6b6b6"
            android:textSize="11sp" />
    </LinearLayout>

    <include layout="@layout/line2" android:visibility="gone" />
    <!--当前职位-->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/llCurrentPosition"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tvCurrentPositionLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/position"
            android:textColor="#262a30"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvCurrentPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="11dp"
            android:drawableRight="@drawable/go"
            android:hint="@string/pleaseFillIn"
            android:textColor="#b6b6b6"
            android:textSize="11sp" />
    </LinearLayout>

    <include layout="@layout/line2" android:visibility="gone" />
    <!--学校-->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/schoolLl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/schoolLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/SchoolName"
            android:textColor="#262a30"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/schoolTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="11dp"
            android:drawableRight="@drawable/go"
            android:hint="@string/pleaseFillIn"
            android:textColor="#b6b6b6"
            android:textSize="11sp" />
    </LinearLayout>

    <include layout="@layout/line2" android:visibility="gone" />

    <LinearLayout
        android:id="@+id/addrLl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/addLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/companyAddr"
            android:textColor="#262a30"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/addrTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="11dp"
            android:drawableRight="@drawable/go"
            android:hint="@string/pleaseFillIn"
            android:textColor="#b6b6b6"
            android:textSize="11sp" />
    </LinearLayout>

    <!--<include layout="@layout/line2"></include>-->

    <LinearLayout
        android:id="@+id/personLl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/manLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/numberOfCompanies"
            android:textColor="#262a30"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/persionTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="11dp"
            android:drawableRight="@drawable/go"
            android:hint="@string/pleaseFillIn"
            android:textColor="#b6b6b6"
            android:textSize="11sp" />
    </LinearLayout>

    <!--<include layout="@layout/line2"></include>-->

    <LinearLayout
        android:id="@+id/companyStyleLl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/companyStyleLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/companyNature"
            android:textColor="#262a30"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/companyStyleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="11dp"
            android:drawableRight="@drawable/go"
            android:hint="@string/pleaseFillIn"
            android:textColor="#b6b6b6"
            android:textSize="11sp" />
    </LinearLayout>

    <include layout="@layout/line2" />


</LinearLayout>