<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <include layout="@layout/title_lay"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/invitbg3"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/invitbg5"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="475dp">

            <TextView
                android:id="@+id/tv0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:textColor="@color/_329cd7"
                android:text="@string/YourInvitationCode"
                android:textSize="13dp"/>
            <TextView
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:textSize="55dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:layout_below="@+id/tv0"
                android:text="------"
                android:textColor="@color/_329cd7"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/save"
                android:layout_below="@+id/code"
                android:background="@drawable/savebg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="14dp"
                />
            <TextView
                android:layout_below="@+id/save"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/_329cd7"
                android:textSize="14dp"
                android:text="@string/InviteFriendsToIncreasePower"/>

            <ImageView
                android:id="@+id/mCode"
                android:layout_above="@+id/mbottomView"
                android:layout_centerHorizontal="true"
                android:layout_width="116.5dp"
                android:layout_height="116.5dp"
                android:background="@drawable/mcode"/>

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/_329cd7"
                android:textSize="14dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/mCode"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/ScanDownloadAPP"/>

            <View
                android:id="@+id/mbottomView"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="58dp"></View>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>