<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/titlelay"
        layout="@layout/title_lay"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/spacing28dp"
                android:paddingRight="@dimen/spacing28dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tips1"
                    android:textColor="@color/_333333"
                    android:textSize="@dimen/sp_24" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/llHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imHead"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/head_home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/spacing28dp"
                    android:layout_marginRight="@dimen/spacing28dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/upload_photos"
                    android:textColor="@color/_999999"
                    android:textSize="12sp" />
            </LinearLayout>

            <!--姓名-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing28dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/spacing28dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:textColor="@color/_333333"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="@string/required"
                    android:textColor="@color/_72c6ae"
                    android:textSize="11sp" />

            </LinearLayout>
            <android.support.design.widget.TextInputEditText
                android:id="@+id/etRegisterName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/spacing28dp"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/spacing28dp"
                android:background="@drawable/psw_white_one_shape"
                android:hint="@string/tips2"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:singleLine="true"
                android:textSize="@dimen/size14sp" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing28dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/spacing28dp"
                android:text="@string/occupation"
                android:textColor="@color/_333333"
                android:textSize="@dimen/sp_16" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_28"
                android:layout_marginRight="@dimen/dp_28"
                android:layout_marginTop="@dimen/dp_10"
                android:overScrollMode="never" />
            <!--公司-->
            <LinearLayout
                android:layout_width="match_parent" android:id="@+id/linear_commpany"
                android:layout_height="wrap_content" android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing28dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/spacing28dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/company"
                        android:textColor="@color/_333333"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="@string/required"
                        android:textColor="@color/_72c6ae"
                        android:textSize="11sp" />

                </LinearLayout>
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etRegisterCommanyName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/spacing28dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/spacing28dp"
                    android:background="@drawable/psw_white_one_shape"
                    android:hint="@string/input_commpany"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    android:singleLine="true"
                    android:textSize="@dimen/size14sp" />


            </LinearLayout>


            <!--职位-->
            <LinearLayout
                android:layout_width="match_parent" android:id="@+id/linear_position"
                android:layout_height="wrap_content" android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing28dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/spacing28dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/positionName"
                        android:textColor="@color/_333333"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="@string/required"
                        android:textColor="@color/_72c6ae"
                        android:textSize="11sp" />

                </LinearLayout>
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etRegisterCommanyPosition"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/spacing28dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/spacing28dp"
                    android:background="@drawable/psw_white_one_shape"
                    android:hint="@string/input_commpany_position"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    android:singleLine="true"
                    android:textSize="@dimen/size14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvRegisterCompleteLast"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/spacing28dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/spacing28dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bt_psw_details_shape"
                android:gravity="center"
                android:text="@string/complete"
                android:textColor="@color/white"
                android:textSize="14dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>