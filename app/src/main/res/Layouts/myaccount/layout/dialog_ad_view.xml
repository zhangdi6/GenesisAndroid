<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="@dimen/dp_335"
    android:layout_height="@dimen/dp_181" android:background="@drawable/bg_ad_dialog">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/linear_watch_ad">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="观看广告获得"
            android:textColor="#ff333333"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="（约20～30S）"
            android:textColor="#ff999999"
            android:textSize="12sp"
            />
        <ImageView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/gemstone" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.05"
            android:textColor="#ff4edab1"
            android:textSize="18sp"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="前往观看广告"
            android:textColor="#ff333333"
            android:textSize="15sp"
            />
    </LinearLayout>
    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="match_parent"
        android:background="#939393"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_30"/>
    <LinearLayout
        android:id="@+id/linear_skip_ad"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳过广告获得"
            android:textColor="#ff333333"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="（约20～30S）"
            android:textColor="#ff999999"
            android:textSize="12sp"
            android:visibility="invisible"
            />
        <ImageView
            android:alpha="0.5"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/gemstone" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0001"
            android:textColor="#7BC6B0"
            android:textSize="18sp"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="放弃更多奖励"
            android:textColor="#999999"
            android:textSize="15sp"
            />
    </LinearLayout>
</LinearLayout>