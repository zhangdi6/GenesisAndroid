<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_300"
    android:layout_height="380dp"
    android:background="@drawable/bg_white_corner"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent" android:id="@+id/linear_top"
        android:layout_height="wrap_content" android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动规则" android:layout_gravity="center_horizontal"
            android:textColor="@color/_333333" android:textSize="21sp" android:layout_margin="@dimen/dp_13"/>
        <View
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/_f1f1f1"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"/>

    </LinearLayout>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/ll_open_membership"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_member_gradual_change_corner"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_know"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="我了解了"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_top"
        android:layout_above="@id/ll_open_membership">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jiyu_rule"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_25"
            android:textColor="@color/_333333"
            android:textSize="@dimen/sp_13"
            />
    </ScrollView>



</RelativeLayout>
