<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ForgetPassword"
        android:textSize="28dp"
        app:layout_constraintBottom_toTopOf="@+id/account"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="61dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:id="@+id/pwdLl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shape_4d6595"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:hint="@string/duplicatePassword"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:background="@null"
            android:id="@+id/pwd2"
            android:layout_weight="1"
            android:textColorHint="@color/white"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cha"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/account"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/pwdLl"
        android:layout_marginBottom="21dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shape_4d6595"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:hint="@string/newPassword"
            android:textSize="12dp"
            android:id="@+id/pwd"
            android:textColor="@color/white"
            android:background="@null"
            android:layout_weight="1"
            android:textColorHint="@color/white"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cha"/>
    </LinearLayout>


    
    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/login"
        android:layout_height="42dp"
        android:text="@string/login"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/pwdLl"
        android:background="@drawable/shape_679dfb2"/>

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:background="@color/_679dfb"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <TextView
            android:textSize="11dp"
            android:textColor="@color/_679dfb"
            android:text="OR"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:background="@color/_679dfb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp" />
    </LinearLayout>

    <TextView
        android:drawableLeft="@drawable/shouze"
        android:drawablePadding="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ProtocolAndPrivacy"
        android:textColor="@color/_679dfb"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="12dp"
        app:layout_constraintTop_toTopOf="@+id/line"
        android:layout_marginTop="30dp"
        />

</android.support.constraint.ConstraintLayout>