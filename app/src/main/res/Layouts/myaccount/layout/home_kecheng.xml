<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/home_kecheng_img"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_150"
        android:layout_marginStart="10dp"
        android:layout_marginTop="@dimen/dp_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ad_img_1" />

    <TextView
        android:id="@+id/home_kecheng_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="TextView"
        android:textSize="@dimen/sp_14"
       android:textColor="@color/color_03"
        app:layout_constraintStart_toEndOf="@+id/home_kecheng_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_kecheng_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toEndOf="@+id/home_kecheng_img"
        app:layout_constraintTop_toBottomOf="@+id/home_kecheng_title" />

    <TextView
        android:id="@+id/home_kechen_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:text="TextView"
        android:visibility="gone"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/_56D8B3"
        app:layout_constraintStart_toEndOf="@+id/home_kecheng_img"
        app:layout_constraintTop_toBottomOf="@+id/home_kecheng_name" />

    <TextView
        android:id="@+id/ke_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:text="不长久肯定是把是就不打克军百世快递加拿大是恐惧可接受的"
        android:maxWidth="@dimen/dp_220"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_03"
        app:layout_constraintStart_toEndOf="@+id/home_kecheng_img"
        app:layout_constraintTop_toBottomOf="@+id/home_kecheng_name" />

    <TextView
        android:id="@+id/ke_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/color_03"
        android:textSize="@dimen/sp_12"
        android:text=" · 微博吸粉大法，引爆私域流量，实..."
        android:maxWidth="@dimen/dp_220"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@+id/home_kecheng_img"
        app:layout_constraintTop_toBottomOf="@+id/ke_one" />
</android.support.constraint.ConstraintLayout>
