<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:scrollbars="none"
    android:background="@color/_f1f1f1"
    android:orientation="vertical">



    <RelativeLayout
        android:id="@+id/real_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_top_conent"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        >

        <LinearLayout
            android:id="@+id/home_renqi"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/text_huodong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="人气单品"
                android:textStyle="bold"
                android:textSize="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="17dp"
                />


            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_weight="1"
                android:src="@drawable/home_back" />

        </LinearLayout>



        <android.support.v7.widget.RecyclerView
            android:layout_below="@id/home_renqi"
            android:id="@+id/home_recy_renqi"
            android:paddingHorizontal="@dimen/dp_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/real_kecheng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_top_conent"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        >

        <LinearLayout
            android:id="@+id/home_kecheng"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="热门课程"
                android:textStyle="bold"
                android:textSize="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="17dp"
                />


            <ImageView
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_weight="1"
                android:src="@drawable/home_back" />

        </LinearLayout>



        <android.support.v7.widget.RecyclerView
            android:layout_below="@id/home_kecheng"
            android:id="@+id/home_recy_kecheng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/real_zhiwei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_top_conent"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        >

        <LinearLayout
            android:id="@+id/home_zhiwei"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="热门职位"
                android:textStyle="bold"
                android:textSize="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="17dp"
                />


            <ImageView
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_weight="1"
                android:src="@drawable/home_back" />

        </LinearLayout>



        <android.support.v7.widget.RecyclerView
            android:layout_below="@id/home_zhiwei"
            android:id="@+id/home_recy_zhiwei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


</LinearLayout>

