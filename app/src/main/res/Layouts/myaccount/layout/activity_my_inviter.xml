<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <include layout="@layout/title_lay" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_marginTop="@dimen/dp_40"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_gravity="center_horizontal">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/image_head"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_100"
                    android:src="@drawable/head_home"
                    app:riv_border_color="@color/white"
                    app:riv_border_width="3dp"
                    app:riv_corner_radius="10dp"
                    app:riv_mutate_background="true"
                    app:riv_oval="true"
                    app:riv_tile_mode="repeat"
                    />
                <ImageView
                    android:id="@+id/image_genders"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@drawable/icon_males"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ff333333"
                android:textSize="26sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                />


            <TextView
                android:id="@+id/text_position"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ff373737"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/text_phone"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ff333333"
                android:textSize="20sp"
                />
            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="@dimen/dp_190"
                android:layout_height="@dimen/dp_50"
                android:orientation="vertical"
                android:background="@drawable/bg_my_invite"
                android:layout_gravity="center_horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邀请码"
                    android:textColor="#ff666666"
                    android:textSize="10sp"
                    />

                <TextView
                    android:id="@+id/text_invite_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ff666666"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <View
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/line_bg"
                android:layout_marginTop="@dimen/dp_20"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人简介"
                android:textColor="#ff3d3d3d"
                android:textSize="18sp"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_25"/>

            <TextView
                android:id="@+id/text_desic"
                android:layout_marginTop="@dimen/dp_15"
                android:lineSpacingMultiplier="2"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="未填写个人简介"
                android:textColor="#ff434343"
                android:textSize="13sp"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>