<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/dp_130"
    android:paddingLeft="@dimen/dp_11" android:paddingRight="@dimen/dp_11">

    <ImageView
        android:layout_width="@dimen/dp_96"
        android:layout_height="@dimen/dp_90"
        android:id="@+id/image_left"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linear_right"
        android:layout_toRightOf="@id/image_left"
        android:layout_alignTop="@id/image_left"
        android:layout_alignBottom="@id/image_left"
        android:layout_marginLeft="@dimen/dp_11">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="「买两盒送旋风杯」清唱瘦身解油一身轻I青汁豆饮 排毒养胃…"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_16"
            android:id="@+id/text_title"
            android:maxLines="2"
            android:ellipsize="end"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_lirun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="利润"
                android:layout_alignParentBottom="true"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/text_lirunlv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="利润率"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/c_e62112"
                />

            <TextView
                android:id="@+id/text_shoujia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="售价"
                android:layout_above="@id/text_lirun"
                />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>