<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/dp_180" android:background="@drawable/bg_item_pulse" android:layout_marginTop="@dimen/dp_6"
    >

    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:gravity="center_vertical|left"
        android:maxLines="2" android:ellipsize="end"
        android:layout_below="@+id/relayout_content"
        android:id="@+id/text_self_desc" android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20" android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_20" android:hint="未添加个人简介"/>


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image_head"
        android:layout_alignTop="@+id/relayout_content"
        android:layout_width="@dimen/dp_58"
        android:layout_height="@dimen/dp_58"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_20"
        android:src="@drawable/icon_head_default_new"
        android:layout_alignParentRight="true"/>


    <RelativeLayout
        android:layout_marginTop="@dimen/dp_16"
        android:id="@+id/relayout_content"
        android:layout_toLeftOf="@id/image_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#ff333333"
            android:id="@+id/text_name"
            android:hint="姓名"
            />

        <TextView
            android:layout_below="@id/text_name"
            android:id="@+id/text_commpany_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/dp_12"
            android:hint="公司"
            android:gravity="left|center_vertical"
            android:textColor="#505050"
            android:textSize="@dimen/sp_13"
            android:layout_toLeftOf="@+id/text_complete"
            android:layout_marginRight="@dimen/dp_6"
            android:maxLines="1"
            android:ellipsize="end"
            android:drawableLeft="@drawable/icon_position"
            android:drawablePadding="@dimen/dp_5"/>

        <TextView
            android:id="@+id/text_zhiwei_name"
            android:layout_alignTop="@id/text_commpany_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:hint="职位"
            android:textColor="#505050"
            android:textSize="@dimen/sp_13"
            android:layout_marginLeft="@dimen/dp_5"
            android:gravity="left|center_vertical"
            android:layout_toRightOf="@id/text_commpany_name"
            android:maxLines="1"
            android:ellipsize="end"
            />


        <TextView
            android:drawablePadding="@dimen/dp_5"
            android:drawableLeft="@drawable/icon_school"
            android:id="@+id/text_school_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:hint="学校"
            android:textColor="#505050"
            android:textSize="@dimen/sp_13"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:ellipsize="end" android:layout_marginTop="@dimen/dp_16"
            android:layout_below="@id/text_commpany_name"
            />

    </RelativeLayout>


</RelativeLayout>