<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent" android:id="@+id/line_top_bar"
        android:layout_height="wrap_content" android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@color/_55D8B1"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/text_space"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:gravity="center"
                    android:text="空间"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/mine_order"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:alpha="0.5"
                    android:gravity="center"
                    android:text="我的订单"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18" />

            </LinearLayout>
            <include layout="@layout/line2" android:id="@+id/view_line_top" android:visibility="gone"/>
            <LinearLayout android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_38"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:id="@+id/linear_send_tab" >

                <TextView
                    android:id="@+id/text_see_me"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:gravity="center"
                    android:text="看过我"
                    android:textColor="@color/_666666"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/text_new_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:alpha="0.5"
                    android:gravity="center"
                    android:text="新人脉"
                    android:textColor="@color/_666666"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>

        </LinearLayout>
        <include layout="@layout/line2" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/line_top_conent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/linear_diancan"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_diancan"/>

                        <TextView
                            android:layout_marginTop="@dimen/dp_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点餐"
                            android:textColor="#ff333333"
                            android:textSize="14sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="即将上线"
                            android:textColor="#ffbebebe"
                            android:textSize="9sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_changdi"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_changdi"/>

                        <TextView
                            android:layout_marginTop="@dimen/dp_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="场地预定"
                            android:textColor="#ff333333"
                            android:textSize="14sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="即将上线"
                            android:textColor="#ffbebebe"
                            android:textSize="9sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_jishi"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_jishi"/>

                        <TextView
                            android:layout_marginTop="@dimen/dp_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="集市"
                            android:textColor="#ff333333"
                            android:textSize="14sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="即将上线"
                            android:textColor="#ffbebebe"
                            android:textSize="9sp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_20" android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="match_parent" android:layout_marginTop="@dimen/dp_20"
                    android:layout_height="wrap_content" android:background="@drawable/bg_space_top"
                    android:paddingTop="@dimen/dp_20" android:paddingBottom="@dimen/dp_20"
                    android:paddingLeft="@dimen/dp_20" android:paddingRight="@dimen/dp_20">

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/linear_buy_vip"
                        android:orientation="horizontal" android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/image_vip"
                            android:layout_width="@dimen/dp_36"
                            android:layout_height="@dimen/dp_36"
                            android:src="@drawable/icon_vip_gray"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/image_vip"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp_3"
                            android:paddingRight="@dimen/dp_3"
                            android:text="成为会员"
                            android:textColor="#ff333333"
                            android:textSize="14sp" />


                    </RelativeLayout>

                    <View
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_30"
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:background="#ffdedede" />
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/relay_buy_partener"
                        android:orientation="horizontal" android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/image_partner"
                            android:layout_width="@dimen/dp_36"
                            android:layout_height="@dimen/dp_36"
                            android:src="@drawable/icon_doller"
                            android:layout_centerVertical="true"/>
                        <TextView
                            android:paddingLeft="@dimen/dp_3"
                            android:paddingRight="@dimen/dp_3"
                            android:layout_toRightOf="@id/image_partner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="成为合伙人"
                            android:textColor="#ff333333"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_below="@id/line_top_conent"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_middle_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="125dp"
                    android:layout_height="28dp"
                    android:text="脉场空间"
                    android:textColor="#ff333333"
                    android:textSize="20sp"
                    />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:scrollbars="none">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <LinearLayout
                            android:id="@+id/linear_sanya"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/dp_162"
                                android:layout_height="@dimen/dp_94"
                                android:src="@drawable/icon_sanya"/>
                            <TextView
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="三亚旗舰店"
                                android:textColor="#ff333333"
                                android:textSize="16sp"
                                />
                            <TextView
                                android:layout_marginTop="@dimen/dp_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="即将开业"
                                android:textColor="#ff56d8b3"
                                android:textSize="14sp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linear_haikou"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/dp_162"
                                android:layout_height="@dimen/dp_94"
                                android:src="@drawable/icon_haikou"/>
                            <TextView
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="海口旗舰店"
                                android:textColor="#ff333333"
                                android:textSize="16sp"
                                />
                            <TextView
                                android:layout_marginTop="@dimen/dp_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="正在筹备中"
                                android:textColor="#ff999999"
                                android:textSize="14sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

            <LinearLayout
                android:layout_below="@id/linear_middle_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_10"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="脉场就业"
                    android:textColor="#ff333333"
                    android:textSize="20sp"
                    android:layout_marginTop="@dimen/dp_20"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_160" android:orientation="vertical">
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:id="@+id/linear_hulianwang"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="@dimen/dp_26"
                                android:layout_height="@dimen/dp_26"
                                android:src="@drawable/icon_internet"/>
                            <TextView
                                android:layout_marginTop="@dimen/dp_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="互联网从业"
                                android:textColor="@color/_666666"
                                android:textSize="@dimen/sp_12"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="即将上线"
                                android:textColor="#ffbebebe"
                                android:textSize="9sp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linear_it_jishu"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="@dimen/dp_26"
                                android:layout_height="@dimen/dp_26"
                                android:src="@drawable/icon_it_tech"/>
                            <TextView
                                android:layout_marginTop="@dimen/dp_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="IT技术"
                                android:textColor="@color/_666666"
                                android:textSize="@dimen/sp_12"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="即将上线"
                                android:textColor="#ffbebebe"
                                android:textSize="9sp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linear_shichangyingxiao"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="@dimen/dp_26"
                                android:layout_height="@dimen/dp_26"
                                android:src="@drawable/icon_yingxiao"/>
                            <TextView
                                android:layout_marginTop="@dimen/dp_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="市场营销"
                                android:textColor="@color/_666666"
                                android:textSize="@dimen/sp_12"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="即将上线"
                                android:textColor="#ffbebebe"
                                android:textSize="9sp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linear_xiaoshouguanli"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="@dimen/dp_26"
                                android:layout_height="@dimen/dp_26"
                                android:src="@drawable/icon_sale_manager"/>
                            <TextView
                                android:layout_marginTop="@dimen/dp_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="销售管理"
                                android:textColor="@color/_666666"
                                android:textSize="@dimen/sp_12"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="即将上线"
                                android:textColor="#ffbebebe"
                                android:textSize="9sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:id="@+id/linear_peixun"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="@dimen/dp_26"
                                android:layout_height="@dimen/dp_26"
                                android:src="@drawable/icon_dz_peixun"/>

                            <TextView
                                android:layout_marginTop="@dimen/dp_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="店长培训"
                                android:textColor="@color/_666666"
                                android:textSize="@dimen/sp_12"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="即将上线"
                                android:textColor="#ffbebebe"
                                android:textSize="9sp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linear_dianshangguanli"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="@dimen/dp_26"
                                android:layout_height="@dimen/dp_26"
                                android:src="@drawable/icon_dianshang_manager"/>

                            <TextView
                                android:layout_marginTop="@dimen/dp_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="电商管理"
                                android:textColor="@color/_666666"
                                android:textSize="@dimen/sp_12"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="即将上线"
                                android:textColor="#ffbebebe"
                                android:textSize="9sp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linear_fazhan"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="@dimen/dp_26"
                                android:layout_height="@dimen/dp_26"
                                android:src="@drawable/icon_zhiye_fazhan"/>

                            <TextView
                                android:layout_marginTop="@dimen/dp_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="职业发展"
                                android:textColor="@color/_666666"
                                android:textSize="@dimen/sp_12"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="即将上线"
                                android:textColor="#ffbebebe"
                                android:textSize="9sp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linear_renliziyuan"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="@dimen/dp_26"
                                android:layout_height="@dimen/dp_26"
                                android:src="@drawable/icon_hr"/>

                            <TextView
                                android:layout_marginTop="@dimen/dp_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="人力资源"
                                android:textColor="@color/_666666"
                                android:textSize="@dimen/sp_12"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="即将上线"
                                android:textColor="#ffbebebe"
                                android:textSize="9sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


</LinearLayout>