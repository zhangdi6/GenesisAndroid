<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_f1f1f1"
    android:orientation="vertical">

    <include layout="@layout/title_lay"></include>

    <!--<LinearLayout-->
    <!--android:layout_width="wrap_content"-->
    <!--android:orientation="vertical"-->
    <!--android:layout_gravity="center"-->
    <!--android:background="@drawable/white_bg_circular"-->
    <!--android:layout_marginTop="60dp"-->
    <!--android:layout_height="wrap_content">-->
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:src="@drawable/icon" />
    <!--</LinearLayout>-->

    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/currentVersion"
        android:textColor="@color/_999999"
        android:textSize="11sp" />

    <LinearLayout
        android:id="@+id/llPraise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/praise"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/go" />

        </LinearLayout>

        <include layout="@layout/line2" />
    </LinearLayout>

    <!--官网-->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llOfficial"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/official_website"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/go" />
        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linear_youzan_list"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="@dimen/dp_120"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="归集用户手机号"
                android:textColor="@color/black" />
            <EditText
                android:id="@+id/edit_good_page_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="手机号"
                android:inputType="number"/>

            <ImageView
                android:layout_weight="1"
                android:layout_width="@dimen/dp_45"
                android:layout_height="match_parent"
                android:src="@drawable/go" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linear_youzan_item"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/text_buy_test"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="会员购买测试"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/edit_good_price"
                android:layout_width="@dimen/dp_128"
                android:layout_height="match_parent"
                android:hint="用户id"/>

            <EditText
                android:id="@+id/edit_good_number"
                android:layout_width="@dimen/dp_128"
                android:layout_height="match_parent"
                android:hint="购买数量"
                android:visibility="gone"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/go" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linear_fanxain_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_zongdingcun"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:textSize="@dimen/sp_22"
                android:textColor="@color/_333333"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"/>

            <TextView
                android:id="@+id/text_zongfanxian"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:textSize="@dimen/sp_22"
                android:textColor="@color/_333333"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"/>

            <TextView
                android:id="@+id/text_yifanxian"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:textSize="@dimen/sp_22"
                android:textColor="@color/_333333"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"/>

            <TextView
                android:id="@+id/text_fanxain_shengyu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:textSize="@dimen/sp_22"
                android:textColor="@color/_333333"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"/>

            <TextView
                android:id="@+id/text_shouyi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:textSize="@dimen/sp_22"
                android:textColor="@color/_333333"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"/>

            <TextView
                android:id="@+id/text_shouyi_zongshu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:textSize="@dimen/sp_22"
                android:textColor="@color/_333333"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>