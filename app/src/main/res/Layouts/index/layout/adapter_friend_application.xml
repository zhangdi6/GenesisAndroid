<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_170" android:layout_marginTop="@dimen/dp_6">


    <LinearLayout
        android:id="@+id/view_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_95"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_self_desc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="是一种优秀的品质，是心智成熟的标志。它是每一成功人力量都具有的一种品质，每个人要精神成功就必须具备…稳…"
            android:textColor="#888888"
            android:textSize="@dimen/sp_13" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:alpha="0.8"
            android:background="@color/image_overlay_false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="申请添加人脉"
            android:textColor="@color/_bebebe"
            android:textSize="@dimen/sp_9" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        android:layout_above="@id/view_bottom"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_15"
        android:paddingRight="@dimen/dp_20">

        <ImageView
            android:id="@+id/headIv"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_58"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/head_home" />

        <Button
            android:id="@+id/btn_action"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:paddingLeft="@dimen/dp_2"
            android:paddingRight="@dimen/dp_2"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_green_bg"
            android:textColor="#ff72c6ae"
            android:textSize="@dimen/sp_11"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/linear_new_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="visible">

            <ImageView
                android:id="@+id/image_refuse"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:visibility="gone"
                android:src="@drawable/icon_refuse"/>

            <ImageView
                android:id="@+id/image_agree"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/icon_agree"
                android:layout_marginLeft="@dimen/dp_20"/>
        </LinearLayout>

        <TextView
            android:id="@+id/text_application"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/str_agree"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_toLeftOf="@id/btn_action"
            android:layout_toRightOf="@id/headIv"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_5">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="我的小明"
                    android:textColor="@color/_333333"
                    android:textSize="17sp" />


                <LinearLayout
                    android:id="@+id/linear_count"
                    android:layout_width="45dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/bg_pulse_complete"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_3"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/image_complete"
                        android:layout_width="9dp"
                        android:visibility="gone"
                        android:layout_height="9dp"
                        android:src="@drawable/icon_comlete" />

                    <TextView
                        android:id="@+id/text_complete_count"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#ffffffff"
                        android:textSize="10sp" />


                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_5">

                <TextView
                    android:id="@+id/text_commpany_name"
                    android:layout_width="70dp"
                    android:layout_height="17dp"
                    android:text="北京舒适科技"
                    android:textColor="#ff666666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_position"
                    android:layout_width="70dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="@dimen/_10dip"
                    android:text="北京舒适科技"
                    android:textColor="#ff666666"
                    android:textSize="12sp" />
            </LinearLayout>



        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
