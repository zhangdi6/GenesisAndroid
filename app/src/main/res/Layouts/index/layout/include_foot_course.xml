<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/line2"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--水晶数量-->
        <RelativeLayout
            android:id="@+id/ll_crystal_number"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/im_crystal_number"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/course_crystal"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/im_crystal_number"
                android:id="@+id/tv_crystal_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="123"
                android:textColor="@color/_333333"
                android:textSize="19sp"
                />


            <RelativeLayout
                android:id="@+id/relay_zhekou"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_alignBottom="@id/tv_crystal_number"
                android:layout_toRightOf="@id/tv_crystal_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_5"
                >

                <TextView
                    android:id="@+id/text_before_zhekou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="2173"
                    android:textColor="@color/_dedede"
                    android:textSize="12sp"
                    />

                <View
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/line" />
            </RelativeLayout>



        </RelativeLayout>
        <!--关注-->
        <LinearLayout
            android:id="@+id/ll_course_sign_up"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1.5"
            android:background="@drawable/bg_sign_up_pink"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_course_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="@string/course_buy_now"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>